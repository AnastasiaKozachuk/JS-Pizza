<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title><%= pageTitle %> - Pizza</title>
    <link rel="shortcut icon" href="assets/images/home-icon.png" type="image/png">
    <!-- Bootsrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <!-- LESS основний файл -->
    <link rel="stylesheet/less" type="text/css" href="assets/less/main.less" />
    <!-- LESS JavaScript компілятор -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>
    <script>
        function checkName() {

            var reg =/^([a-zA-Zа-яА-Яыі\s]+[^0-9*/\-+\.\\\(\)\{\}\[\];:"'><,!@#№$%&?\^]*)$/;

            if(String(document.getElementById("inputName").value).search(reg)!=-1){
                document.getElementById("forName").classList.remove("has-error");
               document.getElementById("forName").classList.add("has-success");
                document.getElementById("help1").style.display="none";

            }else{
                document.getElementById("forName").classList.remove("has-success");
                document.getElementById("forName").classList.add("has-error");
                document.getElementById("help1").style.display="block";

            }
        };

       function checkTeleph(){
           var reg =/^(\+380[0-9]{0,15}|0[0-9]{0,15})$/;

           if(String(document.getElementById("inputTelephone").value).search(reg)!=-1){
               document.getElementById("forTeleph").classList.remove("has-error");
               document.getElementById("forTeleph").classList.add("has-success");
               document.getElementById("help2").style.display="none";

           }else{
               document.getElementById("forTeleph").classList.remove("has-success");
               document.getElementById("forTeleph").classList.add("has-error");
               document.getElementById("help2").style.display="block";

           }
        };

       function checkAddr(){
           var reg=/^([A-Za-zа-яА-Яыі]+.*)$/;
           if(String(document.getElementById("inputAddress").value).search(reg)!=-1){
               document.getElementById("forAddr").classList.remove("has-error");
               document.getElementById("forAddr").classList.add("has-success");
               document.getElementById("help3").style.display="none";

           }else{
               document.getElementById("forAddr").classList.remove("has-success");
               document.getElementById("forAddr").classList.add("has-error");
               document.getElementById("help3").style.display="block";

           }
       };
    </script>

</head>
<body>

